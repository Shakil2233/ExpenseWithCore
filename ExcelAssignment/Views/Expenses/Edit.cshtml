@model ExcelAssignment.Models.Expense

@{
    Layout = "_Layout";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
</head>
<body>



    <h4>Edit Information</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" data-ajax="true"
                  enctype="multipart/form-data"
                  data-ajax-method="POST"
                  data-ajax-success="OnSuccessFE"
                  data-ajax-failure="OnFailureFE"
                  data-ajax-begin="OnBeginFE"
                  data-ajax-complete="OnCompleteFE">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ExId" />
                <div class="form-group">
                    <label asp-for="ExCategoryId_FK" class="control-label"></label>
                    <select asp-for="ExCategoryId_FK" class="form-control" asp-items="ViewBag.ExCategoryId_FK"></select>
                    <span asp-validation-for="ExCategoryId_FK" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExDate" class="control-label"></label>
                    <input type="date" asp-for="ExDate" name="ExDate"  class="form-control" />
                    <span asp-validation-for="ExDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExAmount" class="control-label"></label>
                    <input asp-for="ExAmount" class="form-control" />
                    <span asp-validation-for="ExAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Upload" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Back</a>
                </div>
            </form>
        </div>
    </div>

    <script>

        function OnSuccessFE(response) {
            alert("OnSuccess");
        }
        function OnFailureFE(response) {
            alert("OnFailure");
        }

        function OnBeginFE() {
            alert("OnBegin");
        }

        function OnCompleteFE() {
            alert("OnComplete");
        }


    </script>


</body>
</html>

